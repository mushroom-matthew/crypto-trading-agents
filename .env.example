# ==== OpenAI / LLM ====
OPENAI_API_KEY=sk-REPLACE_ME

# ==== Langfuse Observability ====
LANGFUSE_SECRET_KEY=sk-lf-REPLACE_ME
LANGFUSE_PUBLIC_KEY=pk-lf-REPLACE_ME
LANGFUSE_HOST=https://us.cloud.langfuse.com

# ==== Exchange (Coinbase Exchange by default; set real keys for live) ====
COINBASEEXCHANGE_API_KEY=
COINBASEEXCHANGE_SECRET=

# ==== Temporal ====
# For local dev we point at the dockerized Temporal dev server.
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_NAMESPACE=default
TASK_QUEUE=mcp-tools

# ==== MCP / API ====
MCP_PORT=8080
# Minutes of historical data to load at startup:
HISTORICAL_MINUTES=60

# ==== Stream / Vector continuation guards (prevent huge histories) ====
STREAM_CONTINUE_EVERY=3600
STREAM_HISTORY_LIMIT=9000
VECTOR_CONTINUE_EVERY=3600
VECTOR_HISTORY_LIMIT=9000

# ==== Database (Postgres) ====
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=botdb
POSTGRES_USER=botuser
POSTGRES_PASSWORD=botpass

# Optional: run mode flags
RUN_MODE=dev
