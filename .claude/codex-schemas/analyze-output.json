{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["analysis", "key_findings", "recommendations"],
  "properties": {
    "analysis": {
      "type": "object",
      "properties": {
        "topic": { "type": "string", "description": "What was analyzed" },
        "data_quality": { "type": "string", "enum": ["good", "mixed", "poor"] },
        "summary": { "type": "string", "description": "2-3 sentence high-level summary" }
      },
      "required": ["topic", "summary"]
    },
    "key_findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "finding": { "type": "string" },
          "evidence": { "type": "string" },
          "severity": { "type": "string", "enum": ["critical", "important", "informational"] }
        },
        "required": ["finding", "evidence", "severity"]
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] },
          "rationale": { "type": "string" }
        },
        "required": ["action", "priority"]
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true,
      "description": "Any numeric metrics extracted from the data"
    }
  }
}
